{% extends "profile_module" %}
{% block moduleContent %}
	{% if canPostOnWall %}
	{% include "wall_post_form" with {} %}
	{% endif %}
	<div class="narrowWall" id="postList">
		{%for post in items%}
			<div class="wallRow">{%include "wall_post" with {'post': post}%}</div>
		{% else %}
			<div id="wallEmptyState">{{ L('wall_empty') }}</div>
		{%endfor%}
	</div>
	<div class="bottomSummaryWrap noSidePadding">{% include "pagination" %}</div>
{% endblock %}
