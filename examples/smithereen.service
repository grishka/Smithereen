[Unit]
Description=Smithereen social network server
After=network.target mysqld.service

[Service]
Type=simple
ExecStart=/usr/bin/java -Djava.library.path=/opt/smithereen -jar /opt/smithereen/smithereen.jar /etc/smithereen/config.properties
Restart=always
User=www-data
Group=www-data

[Install]
WantedBy=multi-user.target
